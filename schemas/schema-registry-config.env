# Schema Registry Configuration for Traffic Prediction System

# Basic Settings
SCHEMA_REGISTRY_HOST_NAME=schema-registry
SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS=kafka-broker1:9092
SCHEMA_REGISTRY_LISTENERS=http://0.0.0.0:8081

# Schema Compatibility Settings
SCHEMA_REGISTRY_AVRO_COMPATIBILITY_LEVEL=BACKWARD

# Debug Settings
SCHEMA_REGISTRY_DEBUG=false

# Authentication Settings (disabled for local development)
SCHEMA_REGISTRY_AUTHENTICATION_METHOD=NONE

# Schema Validation Settings (use explicit provider classes)
SCHEMA_REGISTRY_SCHEMA_PROVIDERS=io.confluent.kafka.schemaregistry.avro.AvroSchemaProvider,io.confluent.kafka.schemaregistry.json.JsonSchemaProvider,io.confluent.kafka.schemaregistry.protobuf.ProtobufSchemaProvider

# Master Eligibility Settings (for single instance)
SCHEMA_REGISTRY_MASTER_ELIGIBILITY=true

# Topic Settings
SCHEMA_REGISTRY_KAFKASTORE_TOPIC=_schemas
SCHEMA_REGISTRY_KAFKASTORE_TOPIC_REPLICATION_FACTOR=1